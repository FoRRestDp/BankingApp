<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BankingApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/very_light_gray</item>
        <item name="colorOnPrimary">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/Widget.AppCompat.Button.HomeSelectCurrencyButton</item>
    </style>

    <style name="Widget.AppCompat.Button.HomeSelectCurrencyButton">
        <item name="backgroundTint">@color/light_blue</item>
        <item name="background">@drawable/currency_button_shape_selected</item>
        <item name="iconTint">@color/white</item>
    </style>
</resources>