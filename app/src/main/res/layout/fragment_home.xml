<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="homeViewModel"
            type="com.github.forrestdp.bankingapp.home.HomeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:fontFamily="@font/roboto_medium"
                android:text="Main"
                android:textColor="@color/var_black"
                android:textSize="18sp" />
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".home.HomeFragment">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="0dp"
                    android:layout_height="225dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:elevation="16dp"
                    android:onClick="@{() -> homeViewModel.startNavigatingToCards()}"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/home_card_number_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="18dp"
                            android:layout_marginEnd="32dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@{homeViewModel.cardNumber}"
                            android:textColor="@color/var_black"
                            android:textSize="22sp"
                            app:layout_constraintBottom_toBottomOf="@+id/home_bank_type_image"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/home_bank_type_image"
                            app:layout_constraintTop_toTopOf="@+id/home_bank_type_image"
                            tools:text="4455 1223 3488 1000" />

                        <ImageView
                            android:id="@+id/home_bank_type_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="32dp"
                            tools:src="@drawable/ic_mastercard_icon"
                            app:cardTypeImage="@{homeViewModel.cardType}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/home_avatar_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="33dp"
                            android:src="@drawable/ic_generic_avatar"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/home_bank_type_image" />

                        <TextView
                            android:id="@+id/home_cardholder_name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:fontFamily="@font/roboto"
                            android:text="@{homeViewModel.cardholderName}"
                            android:textColor="@color/gray"
                            android:textSize="17sp"
                            app:layout_constraintBottom_toBottomOf="@+id/home_avatar_image"
                            app:layout_constraintStart_toEndOf="@+id/home_avatar_image"
                            app:layout_constraintTop_toTopOf="@+id/home_avatar_image"
                            tools:text="Anton Ivanov" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="22dp"
                            android:fontFamily="@font/roboto"
                            android:text="Valid thru"
                            android:textAllCaps="true"
                            android:textColor="@color/gray"
                            android:textSize="8sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/home_card_number_text" />

                        <TextView
                            android:id="@+id/home_valid_thru_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="@{homeViewModel.validThruDate}"
                            android:textColor="@color/gray"
                            android:textSize="17sp"
                            app:layout_constraintEnd_toEndOf="@+id/textView3"
                            app:layout_constraintStart_toStartOf="@+id/textView3"
                            app:layout_constraintTop_toBottomOf="@+id/textView3"
                            tools:text="12/22" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="21dp"
                            android:layout_marginEnd="22dp"
                            android:fontFamily="@font/roboto"
                            android:text="Your balance"
                            android:textColor="@color/gray"
                            android:textSize="13sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/home_valid_thru_text" />

                        <TextView
                            android:id="@+id/home_balance_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="22dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@{homeViewModel.balance}"
                            android:textColor="@color/var_black"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView5"
                            tools:text="$2 617.14" />

                        <TextView
                            android:id="@+id/home_currency_balance_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="35dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@{homeViewModel.currencyBalance}"
                            android:textColor="@color/var_black"
                            android:textSize="28sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/home_avatar_image"
                            tools:text="Â£2 125,12" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Change currency"
                    android:textColor="@color/var_black"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView" />

                <FrameLayout
                    android:id="@+id/home_currency_select_btn_container_gbp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintEnd_toStartOf="@+id/home_currency_select_btn_container_eur"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView11">

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/currency_button_shape_unselected"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/roboto_medium"
                        android:onClick="@{() -> homeViewModel.toggleGbp()}"
                        android:text="GBP"
                        android:textSize="16sp"
                        android:visibility="@{homeViewModel.isGbpChecked() ? View.INVISIBLE : View.VISIBLE}"
                        app:icon="@drawable/ic_pound"
                        app:iconGravity="textTop"
                        app:iconPadding="16dp" />

                    <Button
                        style="@style/Widget.AppCompat.Button.HomeSelectCurrencyButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/currency_button_shape_selected"
                        android:fontFamily="@font/roboto_medium"
                        android:onClick="@{() -> homeViewModel.toggleGbp()}"
                        android:text="GBP"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:visibility="@{homeViewModel.isGbpChecked() ? View.VISIBLE : View.INVISIBLE}"
                        app:icon="@drawable/ic_pound"
                        app:iconGravity="textTop"
                        app:iconPadding="16dp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/home_currency_select_btn_container_eur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    app:layout_constraintEnd_toStartOf="@+id/home_currency_select_btn_container_rub"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/home_currency_select_btn_container_gbp"
                    app:layout_constraintTop_toBottomOf="@+id/textView11">

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/currency_button_shape_unselected"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/roboto_medium"
                        android:onClick="@{() -> homeViewModel.toggleEur()}"
                        android:text="EUR"
                        android:textSize="16sp"
                        android:visibility="@{homeViewModel.isEurChecked() ? View.INVISIBLE : View.VISIBLE}"
                        app:icon="@drawable/ic_euro"
                        app:iconGravity="textTop"
                        app:iconPadding="16dp" />

                    <Button
                        style="@style/Widget.AppCompat.Button.HomeSelectCurrencyButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/currency_button_shape_selected"
                        android:fontFamily="@font/roboto_medium"
                        android:onClick="@{() -> homeViewModel.toggleEur()}"
                        android:text="EUR"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:visibility="@{homeViewModel.isEurChecked() ? View.VISIBLE : View.INVISIBLE}"
                        app:icon="@drawable/ic_euro"
                        app:iconGravity="textTop"
                        app:iconPadding="16dp"
                        tools:visibility="invisible" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/home_currency_select_btn_container_rub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/home_currency_select_btn_container_eur"
                    app:layout_constraintTop_toBottomOf="@+id/textView11">

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/currency_button_shape_unselected"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/roboto_medium"
                        android:onClick="@{() -> homeViewModel.toggleRub()}"
                        android:text="RUB"
                        android:textSize="16sp"
                        android:visibility="@{homeViewModel.isRubChecked() ? View.INVISIBLE : View.VISIBLE}"
                        app:icon="@drawable/ic_ruble"
                        app:iconGravity="textTop"
                        app:iconPadding="16dp" />

                    <Button
                        style="@style/Widget.AppCompat.Button.HomeSelectCurrencyButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/currency_button_shape_selected"
                        android:fontFamily="@font/roboto_medium"
                        android:onClick="@{() -> homeViewModel.toggleRub()}"
                        android:text="RUB"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:visibility="@{homeViewModel.isRubChecked() ? View.VISIBLE : View.INVISIBLE}"
                        app:icon="@drawable/ic_ruble"
                        app:iconGravity="textTop"
                        app:iconPadding="16dp"
                        tools:visibility="invisible" />
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="264dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="16dp"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/home_currency_select_btn_container_eur">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="History"
                            android:textColor="@color/var_black"
                            android:textSize="17sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/home_transaction_history_list"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginEnd="22dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView13" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>


</layout>